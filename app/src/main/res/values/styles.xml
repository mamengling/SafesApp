<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line_view_v">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/content_view_bg</item>
    </style>

    <style name="succinctProgressDialog" parent="@style/succinct_dialog">
        <item name="android:windowBackground">@drawable/shape_succinct_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- ProgressDialog Style -->
    <style name="succinct_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- view分割线样式 -->
    <style name="bg_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/content_view_bg</item>
    </style>

    <!-- view分割线样式 -->
    <style name="bg_line_5h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:background">@color/content_view_bg</item>
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line_10h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/content_view_bg</item>
    </style>
    <!--旋转进度条-->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/refresh_animation</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="tab_line_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/xml_radio_textcolor_2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_nav_indicator</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
