<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zsbx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_home_zsbx"
            android:text="赠送保险"/>

        <TextView
            android:id="@+id/tv_mxcp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_home_mxcp"
            android:text="明星产品"/>

        <TextView
            android:id="@+id/tv_jfsc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_home_jfsc"
            android:text="积分商城"/>


        <TextView
            android:id="@+id/tv_bxfl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_home_bxfl"
            android:text="保险分类"/>


        <TextView
            android:id="@+id/tv_xbzs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_home_xbzs"
            android:text="小白助手"/>
    </LinearLayout>

</LinearLayout>