<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_view_bg">

    <LinearLayout
        android:id="@+id/line_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_bar1_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/x_edit_clear_bg"
            android:drawableLeft="@mipmap/home_icon_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="搜索“百万医疗”试试"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="10sp" />

        <com.safes.mling.safesapp.utils.widget.TextIconPointView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <com.safes.mling.safesapp.utils.widget.YRecycleview
        android:id="@+id/yrecycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_search"
        android:scrollbars="none" />


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@mipmap/icon_home_top"
        fab:fab_colorNormal="@null"
        fab:fab_colorPressed="@null"
        fab:fab_colorRipple="@null" />
</RelativeLayout>